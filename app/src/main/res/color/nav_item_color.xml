<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when an item is selected -->
    <item android:state_checked="true" android:color="@color/nav_item_active" />
    <!-- Default state (when an item is not selected) -->
    <item android:state_checked="false" android:color="@color/nav_item_inactive" />
</selector>
