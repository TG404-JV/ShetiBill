<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Applying the new farmer-related color scheme -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item> <!-- Set window background -->
    </style>


    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@android:color/transparent</item> <!-- Transparent background -->
        <item name="android:windowBackground">@drawable/rounded_corner_background</item> <!-- Your rounded corner background -->
    </style>

    <style name="customButton">
        <item name="android:textSize" >20sp</item>
        <item name="background">@drawable/rounded_corner_background</item>
        <item name="android:textColor">@color/white</item>
    </style>


        <!-- Base application theme. -->
        <style name="Theme.JetComposeLoginUI" parent="Theme.MaterialComponents.DayNight.NoActionBar">
            <!-- Primary brand color. -->
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryVariant">@color/colorPrimary</item>
            <item name="colorOnPrimary">@color/white</item>
            <!-- Secondary brand color. -->
            <item name="colorSecondary">@color/teal_200</item>
            <item name="colorSecondaryVariant">@color/teal_700</item>
            <item name="colorOnSecondary">@color/black</item>
            <!-- Customize your theme here. -->
        </style>

        <style name="Theme.JetComposeLoginUI.NoActionBar">
            <item name="windowActionBar">false</item>
            <item name="windowNoTitle">true</item>
            <!-- Status bar color. -->
            <item name="android:statusBarColor" >@color/status_bar</item>
        </style>

        <style name="SplashTheme" parent="Theme.JetComposeLoginUI">
            <item name="android:windowBackground">@drawable/bg_splash</item>
            <item name="android:windowFullscreen">true</item>
            <item name="android:windowTranslucentNavigation">true</item>
            <item name="android:statusBarColor" >@color/status_bar</item>
        </style>

        <style name="Theme.JetComposeLoginUI.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

        <style name="Theme.JetComposeLoginUI.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- Designing A Style For Edit Text -->
    <style name="EditText">
        <item name="android:background">@drawable/ic_edit_text_bg</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/rounded_button_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Widget.App.CardView.Trend" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/farm_card_light</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ShapeAppearance.App.RoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>



</resources>
