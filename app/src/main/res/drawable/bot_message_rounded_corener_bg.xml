<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer layer for gradient stroke -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" /> <!-- Rounded corners for the stroke -->
            <gradient
                android:angle="45"
                android:startColor="#078FFB"
                android:centerColor="#F2A637"
                android:endColor="#F45F2F"
                android:type="linear" />
        </shape>
    </item>

    <!-- Inner layer for the solid background -->
    <item
        android:left="3dp"
        android:top="3dp"
        android:right="3dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="17dp" /> <!-- Smaller radius to fit inside stroke -->
            <solid android:color="#fff" /> <!-- Background color -->
        </shape>
    </item>
</layer-list>
