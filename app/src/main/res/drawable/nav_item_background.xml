<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#50C878" /> <!-- Change this to your desired selected color -->
            <corners android:radius="10dp" /><!-- Optional: Set corners radius if needed -->
            <corners android:bottomRightRadius="10dp"/>
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Change this to your default color if needed -->
        </shape>
    </item>
</selector>
