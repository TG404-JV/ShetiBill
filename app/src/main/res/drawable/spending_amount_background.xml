<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Light green partially transparent background -->
    <solid android:color="#0F4CAF50" />

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Subtle border -->
    <stroke
        android:width="1dp"
        android:color="#1A4CAF50" />

    <!-- Add some padding to the shape -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>