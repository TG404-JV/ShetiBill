<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="315"
                android:type="linear"
                android:startColor="#00C853"
                android:centerColor="#2E7D32"
                android:endColor="#1B5E20"
                android:centerX="0.6"
                android:centerY="0.4" />
        </shape>
    </item>

    <!-- Subtle pattern overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#00FFFFFF"
                android:centerColor="#15FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
        </shape>
    </item>

    <!-- Vignette effect -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="85%p"
                android:startColor="#00000000"
                android:endColor="#22000000"
                android:centerX="0.5"
                android:centerY="0.5" />
        </shape>
    </item>
</layer-list>