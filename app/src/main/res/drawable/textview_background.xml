<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="@android:color/white"/> <!-- or use @color/your_color -->

    <!-- Border around the TextView -->
    <stroke
        android:width="1dp"
        android:color="@color/purple_500"/> <!-- You can adjust the color -->

    <!-- Rounded corners -->
    <corners android:radius="12dp"/>

    <!-- Padding inside the TextView -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
