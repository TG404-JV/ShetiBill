<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Layer (Optional, use if you want a background color) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" /> <!-- Transparent background -->
        </shape>
    </item>

    <!-- Border Layer -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/white" /> <!-- Border color -->
            <padding android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp"/> <!-- Border thickness -->
        </shape>
    </item>
</layer-list>
