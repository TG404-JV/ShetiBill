<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/form_background">

    <!-- Crop Image Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <!-- ImageView for Crop -->
        <ImageView
            android:id="@+id/cropImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/sample_crop_image"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp"
            android:background="@drawable/image_background"/>

        <!-- Crop Name and Location in Vertical Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Crop Name -->
            <EditText
                android:id="@+id/cropNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/crop_name"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- Location (Read-Only) -->
            <EditText
                android:id="@+id/locationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/developer_adderess"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:drawableStart="@drawable/menu_icon"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:layout_marginBottom="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Quantity and Price Section -->
    <EditText
        android:id="@+id/cropQuantityEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/quantity"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/cropPriceEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/price_per_unit"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginBottom="12dp" />

    <!-- Description Section -->
    <EditText
        android:id="@+id/SellerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/seller_name"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- Contact Number Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <!-- Phone Icon -->
        <ImageView
            android:id="@+id/phoneIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_call"
            android:layout_marginEnd="8dp" />

        <!-- Contact Number (Clickable Text) -->
        <EditText
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:text="@string/developer_contact"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:clickable="true"
            android:padding="8dp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Add Crop Button -->
    <Button
        android:id="@+id/addCropButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_crop"
        android:background="@drawable/button_background"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:textStyle="bold" />
</LinearLayout>
