<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/card_background"
    android:layout_margin="5dp">

    <!-- Crop Image -->
    <ImageView
        android:id="@+id/cropImageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/rounded_background"
        android:layout_marginEnd="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_crop_image"
        android:contentDescription="Crop Image" />

    <!-- Details Container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Crop Name -->
        <TextView
            android:id="@+id/cropNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cabbages"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Crop Quantity and Rate -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/cropQuantityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 Quintal"
                android:textColor="#666" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" | "
                android:textColor="#999" />

            <TextView
                android:id="@+id/cropPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$280/Quintal"
                android:textColor="#666" />
        </LinearLayout>

        <!-- Seller Information -->
        <TextView
            android:id="@+id/cropSellerNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="George Anderson"
            android:textSize="14sp"
            android:textColor="#444"
            android:layout_marginTop="6dp" />

        <!-- Location -->
        <TextView
            android:id="@+id/sellerLocationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Texas, USA"
            android:textSize="12sp"
            android:textColor="#777" />
    </LinearLayout>

    <!-- Call Button -->
    <ImageButton
        android:id="@+id/callButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_call"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:contentDescription="Call Button" />
</LinearLayout>
