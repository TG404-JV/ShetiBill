<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_background">

    <!-- Background elements -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.1"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_farming_pattern_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Main logo container with circular background -->
        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:cardCornerRadius="90dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="24dp"
                android:src="@drawable/app_logo"
                android:background="@color/white"/>
        </androidx.cardview.widget.CardView>

        <!-- App name with custom font -->
        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sheti Bill"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/ic_poppins_bold"
            android:layout_marginBottom="8dp"/>

        <!-- Tagline -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Digital Farming Assistant"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/ic_poppins_bold"
            android:alpha="0.9"/>

        <!-- Bottom elements -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="48dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_sprout_img"
                android:alpha="0.9"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Growing Together"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/ic_poppins_bold"
                android:layout_marginStart="8dp"
                android:alpha="0.9"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>