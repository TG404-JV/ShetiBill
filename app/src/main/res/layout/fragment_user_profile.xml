<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6FAE6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/profile_imagelayou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <!-- Background Wave Design -->
            <View
                android:id="@+id/wave_background"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/ic_wave" />

            <!-- Profile Image -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_farmer_profile_img"
                android:layout_marginBottom="15dp" />

            <!-- Farmer Name -->
            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farmer Name"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_below="@id/profile_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp" />
        </RelativeLayout>

        <!-- Information Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/profile_card_background"
            android:padding="16dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:elevation="2dp">

            <!-- Farmer Email (Icon + TextView) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:paddingBottom="4dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_profile_email"
                android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/profile_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="farmer@example.com"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginVertical="8dp" />

            <!-- Farmer Birthdate (Icon + TextView) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:paddingBottom="4dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_profile_dob"
                android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/profile_dob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Birthdate: Jan 1, 1980"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginVertical="8dp" />

            <!-- Farmer Contact (Icon + TextView) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:paddingBottom="4dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_profile_contact"
                android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/profile_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact: +1234567890"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginVertical="8dp" />

            <!-- Acres Owned (Icon + TextView) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:paddingBottom="4dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_profile_land"
                android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/profile_acres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acres Owned: 20"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Buttons Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="100dp"
            android:padding="16dp">

            <!-- Update Password and Update Profile Buttons in a horizontal layout -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp">

                <!-- Update Password Button -->
                <Button
                    android:id="@+id/btn_update_password"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_background_profile"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"
                    android:elevation="4dp"
                    android:layout_gravity="center"
                    android:textAllCaps="false" />

                <!-- Update Profile Button -->
                <Button
                    android:id="@+id/btn_update_profile"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_background_profile"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:elevation="4dp"
                    android:layout_gravity="center"
                    android:textAllCaps="false" />
            </LinearLayout>

            <!-- Logout Button -->
            <Button
                android:id="@+id/btn_logout"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textColor="@android:color/white"
                android:background="@drawable/button_background_profile"
                android:padding="12dp"
                android:textSize="16sp"
                android:elevation="4dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:textAllCaps="false" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
